<p id="notice"><%= notice %></p>

<h1>Bugs Description</h1>

<table>
  <thead>
    <tr>
    	<td></td>

    </tr>
  </thead>

  <tbody>
    <% @bugs.each do |bug| %>
      <tr>
      	<td><%= bug.bug_title %></td>
      	<td><%= bug.issue_log %></td>
      	<td><%= bug.due_date %></td>
      	<td><%= bug.priority %></td>
      	<td><%= bug.status ? "Closed" : "Open" %></td>
      	<td><%= bug.issue_resolved %></td>
      	<td><%= bug.severity %></td>
        <td><%= link_to 'Show', bug %></td>
        <td><%= link_to 'Edit', edit_bug_path(bug) %></td>
        <td><%= link_to 'Destroy', bug, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>